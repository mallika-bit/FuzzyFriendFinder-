@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}






<br />
<br />
<div class="border backgroundWhiteBorder">
    <div class="row">
        <div class="col-6">
            <h3 class="text-info">Users List</h3>
        </div>


        <div class="col-6 text-right">
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-info">
                <i class="fas fa-plus"></i>&nbsp;New User Registration
            </a>
        </div>
        <br />
        <br />
        <div class="col-12 text-left">
            @if (Model.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            @Html.DisplayNameFor(m => m.FirstName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.PhoneNumber)
                        </th>
                        <th></th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {

                <tr>
                    <td>
                        @Html.DisplayFor(m => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.PhoneNumber)
                    </td>
                    <td>
                        <a class="btn btn-success text-white" asp-action="Lock" asp-route-id="item.Id">
                            <i class="fas fa-lock-open"></i>
                        </a>
                    </td>

                </tr>

                    }

                </table>
                <br />

            }
            else
            {
                <p> No Category Exists...</p>
            }
        </div>

    </div>
</div>



