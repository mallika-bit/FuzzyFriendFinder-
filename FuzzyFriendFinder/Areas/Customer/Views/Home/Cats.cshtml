

@model IEnumerable<FuzzyFriendFinder.Models.Pet>
@{
    ViewData["Title"] = "AllListings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Cats</h1>

<body>
    <p>
        Here are all our cats that are currently up for adoption. If you're interested in adopting, please click "interested" and follow the prompt.
    </p>
</body>




<div class="row row-cols-1 row-cols-md-2 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card">
                <img src="~/images/@item.Image" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Breed</p>
                    <p class="card-text">@item.Status</p>
                    <p class="card-text">@item.Gender</p>
                    <p class="card-text" style="text-align:right">Details</p>
                </div>
            </div>
        </div>
    }


</div>
