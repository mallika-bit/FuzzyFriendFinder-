@model IEnumerable<FuzzyFriendFinder.Models.Pet>
@{
    ViewData["Title"] = "SearchPageListing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<h3>SearchPageListing</h3>

<br />
<br />

<div class="row row-cols-1 row-cols-md-2 g-4">
    @if (Model != null)
    {
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card">

                    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">

                            @{
                                int index = 0;
                                var images = item.ImageUrls.Split(",");
                                foreach (var image in images)
                                {
                                    if (index == 0)
                                    {
                                        <div class="carousel-item active">
                                            <img src="@image" class="d-block w-100" alt="@index">
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="carousel-item">
                                            <img src="@image" class="d-block w-100" alt="@index">
                                        </div>
                                    }
                                    index++;
                                }

                            }

                        </div>
                    </div>

                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>


                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Breed</p>
                        @if (item.Status == true)
                        {
                            <p class="card-text" style="font-weight:bold;color:green">Available</p>
                        }
                        else
                        {
                            <p class="card-text" style="font-weight:bold;color:red"> Unavailable</p>
                        }
                        <p class="card-text">@item.Gender</p>

                    </div>


                </div>
                <p class="card-text" style="text-align:right"><a asp-controller="Home" asp-action="Details" asp-route-id=@item.Id>Details</a></p>

            </div>
        }

    }
    else
    {
        <p class="" style="font-weight:bold;color:red">No Matches Found For Your Search</p>
    }

</div>
