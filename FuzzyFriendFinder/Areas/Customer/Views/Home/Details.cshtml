@model FuzzyFriendFinder.Models.Pet
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="col">
    <div class="row">
        <div class="col-2">

        </div>
        <div class="col-8">
         <form method="post" asp-controller="Adoption" asp-action="Index" asp-route-id=@Model.Id>
            <div class="card mb-3">
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        @{
                            int index = 0;
                            var image = @Model.ImageUrls.Split(",");
                            foreach (var item in image)
                            {
                                if (index == 0)
                                {
                                    <div class="carousel-item active">
                                        <img src="@item" class="d-block w-100" alt="@index">
                                    </div>
                                }
                                else
                                {
                                    <div class="carousel-item">
                                        <img src="@item" class="d-block w-100" alt="@index">
                                    </div>
                                }
                                index++;
                            }

                        }

                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>


                <div class="card-body">
                    <h5 class="card-title">@Model.Name</h5>
                    <p style="font-weight:bolder">About</p>
                    <p class="card-text">@Model.Description</p>
                    @if (Model.Status == true)
                    {
                        <p class="card-text" style="font-weight:bold;color:green">Available</p>
                    }
                    else
                    {
                        <p class="card-text" style="font-weight:bold;color:red"> Unavailable</p>
                    }

                    <p class="card-text"><strong><span>Gender:</span></strong>@Model.Gender</p>
                    <p class="card-text"><strong><span>Breed:</span></strong>@Model.Breed</p>
                    <p class="card-text"><strong><span>Years:</span></strong>@Model.Years</p>
                    <p class="card-text"><strong><span>Months:</span></strong>@Model.Months</p>
                    <p class="card-text"><strong><span>Weeks:</span></strong>@Model.Weeks</p>
                    <p class="card-text"><strong><span>Color:</span></strong>@Model.Color</p>
                    <p class="card-text"><strong><span>Weight:</span></strong>@Model.Weight</p>


                </div>
            </div>
            
            <input type="submit" class=" btn btn-info float-right" value="Interest" />
         </form>  
        </div>
        <div class="col-2">

        </div>
      


       
    </div>
</div>
